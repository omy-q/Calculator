<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_columnSpan="4"
    android:background="@color/color_background_table">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_del_el"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_other_sighs"
            android:text="@string/button_text_del_el"
            android:textColor="@color/text_color_other_signs"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_del_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_other_sighs"
            android:text="@string/button_text_del_all"
            android:textColor="@color/text_color_other_signs"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_equally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:layout_span="2"
            android:backgroundTint="@color/color_button_equally"
            android:text="@string/button_text_equally"
            android:textColor="@color/text_color_button_equally"
            android:textSize="@dimen/size_of_text" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_numbers"
            android:text="@string/button_text_7"
            android:textColor="@color/text_color_numbers"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_numbers"
            android:text="@string/button_text_8"
            android:textColor="@color/text_color_numbers"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_numbers"
            android:text="@string/button_text_9"
            android:textColor="@color/text_color_numbers"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_math_sighs"
            android:text="@string/button_text_plus"
            android:textColor="@color/text_color_math_signs"
            android:textSize="@dimen/size_of_text" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_numbers"
            android:text="@string/button_text_4"
            android:textColor="@color/text_color_numbers"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_numbers"
            android:text="@string/button_text_5"
            android:textColor="@color/text_color_numbers"
            android:textSize="@dimen/size_of_text"
            android:layout_marginEnd="@dimen/marginBetweenButton"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/minHeightButton"
            android:minWidth="@dimen/minWidthButton"
            android:backgroundTint="@color/color_numbers"
            android:text="@string/button_text_6"
